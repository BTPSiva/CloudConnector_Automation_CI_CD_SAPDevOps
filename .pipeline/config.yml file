general:


service:
  

stages:
  Build:
    runSteps:
      - name: "Terraform Init"
        command: |
          terraform init
      - name: "Terraform Validate"
        command: |
          terraform validate

  Plan:
    runSteps:
      - name: "Terraform Plan"
        command: |
          terraform plan -out=tfplan.out

  Apply:
    runSteps:
      - name: "Terraform Apply"
        command: |
          terraform apply -auto-approve tfplan.out
